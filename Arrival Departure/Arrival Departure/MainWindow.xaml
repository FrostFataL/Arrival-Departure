<Window x:Class="Arrival_Departure.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        
        <Button Grid.Row="0" x:Name="NewPassport" Content="Новый паспорт" Margin="100,50,100,50" Click="OpenNewPassport"/>
        <Button Grid.Row="1" x:Name="PassportsList" Content="Список" Margin="100,50,100,50"/>
        
    </Grid>    
</Window>
